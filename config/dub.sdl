name "config"
description "Configuration for Lime"
authors "Jacob Carlborg"
copyright "Copyright Â© 2021, Jacob Carlborg"
license "BSL-1.0"

targetType "sourceLibrary"

preGenerateCommands `
  "$${DUB_EXE}" \
  --arch="$$(echo "$$DUB_ARCH" | sed -r 's/ .+//g')" \
  --compiler="$${DC}" \
  --single tools/setup_plugins_overrides.d
 ` platform="posix"

preGenerateCommands `"%DUB_EXE%" --arch="%DUB_ARCH:* =%" --compiler="%DC%" --single tools/setup_plugins_overrides.d` platform="windows"

stringImportPaths "temp"
dflags "-preview=shortenedMethods" "@$PACKAGE_DIR/temp/flags" "-mixin=$PACKAGE_DIR/temp/mixin.d"
